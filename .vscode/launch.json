  "version": "0.2.0",
  "configurations": [
    {
			"name": "Launch TypeScript",
			"type": "node",
			"request": "launch",
      "cwd": "${workspaceRoot}",
			"program": "${workspaceRoot}/src/demo.ts",
			"sourceMaps": true,
			"outFiles": ["${workspaceRoot}/lib/**/*.js"]
		},
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Process",
      "port": 5858,
      "outFiles": [],
      "sourceMaps": true
    }
  ]
}