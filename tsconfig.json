{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./lib",
    "preserveConstEnums": true,
    "removeComments": true,
    "noEmitHelpers": true,
    "strict": true,
    "importHelpers": true,
    "sourceMap": false // needed for debugging only
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*-spec.ts"
  ]
}
